{
    "name": "tdl-packager",
    "version": "1.0.0",
    "description": "This package aims to build The Darkest Light game into the www folder",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "yarn build-index && cordova build browser --verbose && node utility/electronPackager.js",
        "build-index": "node utility/indexBuilder.js",
        "dev": " yarn build-index && cordova run browser -- --live-reload",
        "docs": "./node_modules/.bin/jsdoc -d ./docs -t ./node_modules/ink-docstrap/template -R README.md -r ./www/TDLib/"
    },
    "author": "Francesco Negri",
    "license": "MIT",
    "dependencies": {
        "browser-sync": "^2.26.3",
        "cheerio": "^0.19.0",
        "cordova": "^8.1.2",
        "cordova-android": "^7.1.1",
        "cordova-browser": "^5.0.4",
        "cordova-plugin-browsersync": "^1.1.0",
        "cordova-plugin-whitelist": "^1.3.3",
        "cordova-windows": "^6.0.1",
        "csp-parse": "0.0.2",
        "elementtree": "^0.1.7",
        "npm": "^2.15.12",
        "plist": "^1.2.0",
        "q": "^1.5.1"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {},
            "cordova-plugin-browsersync": {}
        },
        "platforms": [
            "browser",
            "android",
            "windows"
        ]
    },
    "devDependencies": {
        "glob": "^5.0.15",
        "ink-docstrap": "^1.3.2",
        "jsdoc": "^3.5.5",
        "ncp": "^2.0.0",
        "recursive-readdir": "^2.2.2"
    }
}